using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Data.SqlClient;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using System.Text.RegularExpressions;

namespace Front
{
    public partial class Set_New_Password : Form
    {
        public Set_New_Password()
        {
            InitializeComponent();
            txtNewPass.PasswordChar = '*';
            txtReType.PasswordChar = '*';
        }

        private void btnBack_Click(object sender, EventArgs e)
        {
            Log_In li = new Log_In();
            li.Show();
            this.Hide();
        }

        private void btnChangePass_Click(object sender, EventArgs e)
        {
            string newPass = txtNewPass.Text;
            string reType = txtReType.Text;

            if (string.IsNullOrEmpty(newPass) || string.IsNullOrEmpty(reType))
            {
                MessageBox.Show("Please fill in all the required fields", "Warning", MessageBoxButtons.OK, MessageBoxIcon.None);
                return;
            }
            if (newPass != reType)
            {
                MessageBox.Show("New password do not match", "Warning", MessageBoxButtons.OK, MessageBoxIcon.None);
                return;
            }
            if (!IsStrongPassword(newPass))
            {
                MessageBox.Show("Password must be atleast 8 characters and include letters, numbers, and special characters (!@$%)",
                    "Warning", MessageBoxButtons.OK, MessageBoxIcon.None);
                return;
            }
            try
            {
                string connectionString = @"Data Source=WYNE;Initial Catalog=foodMonitoringDB;Integrated Security=True";
                using (SqlConnection conn = new SqlConnection(connectionString))
                {
                    conn.Open();
                    
                    string updquery = "UPDATE Staff SET Password = @newPassword WHERE Password = @currentPassword";
                    using (SqlCommand updcommand = new SqlCommand(updquery, conn))
                    {
                        updcommand.Parameters.AddWithValue("@newPassword", newPass);
                        updcommand.ExecuteNonQuery();
                    }
                    MessageBox.Show("Password updated successfully!", " ", MessageBoxButtons.OK, MessageBoxIcon.None);
                    this.Close();
                }
            }
            catch (Exception ex)
            {
                MessageBox.Show("Database error: " + ex.Message);
            }
        }
        private bool IsStrongPassword(string password)
        {
            if (password.Length <= 8)
            {
                return false;
            }
            bool hasLetter = Regex.IsMatch(password, "[a-zA-Z]");
            bool hasNumber = Regex.IsMatch(password, "[0-9]");
            bool hasSpecial = Regex.IsMatch(password, "[!@#$%^&*(),.?\":{}|<>]");

            return hasLetter && hasNumber && hasSpecial;
        }
        private void cbShow1_CheckedChanged(object sender, EventArgs e)
        {
            if (cbShow1.Checked)
            {
                txtNewPass.PasswordChar = '\0';
            }
            else
            {

            }
            {
                txtNewPass.PasswordChar = '*';
            }
        }

        private void cbShow3_CheckedChanged(object sender, EventArgs e)
        {
            if (cbShow3.Checked)
            {
                txtReType.PasswordChar = '\0';
            }
            else
            {
                txtReType.PasswordChar = '*';
            }
        }
    }
}
